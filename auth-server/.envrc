# direnv configuration for environment variables

# loads parent directory .envrc
source_up

# Server settings
export PORT=8000
export JWT_SECRET="your-secure-jwt-secret"
export TOKEN_EXPIRY=3600
export REFRESH_TOKEN_EXPIRY=604800
export PASSWORD_RESET_EXPIRY=86400
export BCRYPT_ROUNDS=12
export MAX_REQUEST_SIZE=10240
export RATE_LIMIT_REQUESTS=100
export RATE_LIMIT_WINDOW=60000
export RATE_LIMIT_LOGIN_ATTEMPTS=5
export ALLOWED_ORIGINS="http://localhost:3000"
export RATE_LIMIT_CLEANUP_INTERVAL=60000
export BLACKLIST_CLEANUP_INTERVAL=3600000

# CSRF settings
export CSRF_TOKEN_EXPIRY=3600

# Security settings
export COMMON_PASSWORDS="password123,admin123,12345678,qwerty123"
